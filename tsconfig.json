{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "./src/ui/dist",
    "rootDir": "./src/ui",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/ui/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "src/ui/dist"]
}
